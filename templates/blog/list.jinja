{% extends "blog/base.jinja" %}
{% block extrahead %}
{% endblock %}
<!-- LIST OF POSTS -->
{% block content %}
    <div class="main">
        {% for post in post_list %}
            <div class="title">
                <a href="{{ url('post', post.pk) }}">
                    {{ post.id }}
                    {{ post.title }}
                </a>
            </div>
            <ul>
                <div class="time">{{ post.created }}</div>
                <div class="body">{{ post.body|truncate(500)|striptags }}</div>
                <div class="commentlink">
                    <a href="{{ url('post', post.pk) }}">Comments ({{ post.comments.count() }})</a>
                </div>
            </ul>
        {% endfor %}
    </div>
{% endblock %}
